---
import MainLayout from "../../layouts/main-layout.astro";
import { getBlogDetail, getBlogs } from "../../lib/microcms";

// 詳細記事ページの全パスを取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"], limit: 9999 });
  return response.contents.map((content: any) => ({
    params: {
      blogId: content.id,
    },
  }));
}

//記事の詳細情報を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId as string);
---

<MainLayout title={blog.title}>
  <span class="text-sm text-gray-500">
    <time datetime={blog.publishedAt}
      >{new Date(blog.publishedAt!).toLocaleDateString()}</time
    >
    に公開
  </span>
  <div class="markdown-container" set:html={blog.content} />
</MainLayout>
